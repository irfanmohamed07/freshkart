<%- include('../partials/header') %>

<main class="container mx-auto p-4 mt-8 flex-1">
    <div class="mb-4">
        <a href="/shops/<%= product.shop_id %>" class="text-green-600 hover:text-green-800">
            &larr; Back to <%= product.shop_name %>
        </a>
    </div>

    <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <div class="md:flex">
            <div class="md:w-1/3 p-4">
                <div class="h-64 bg-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
                    <% if (product.image_url) { %>
                        <img src="<%= product.image_url %>" alt="<%= product.name %>" class="object-cover w-full h-full">
                    <% } else { %>
                        <div class="text-3xl text-gray-400">No Image</div>
                    <% } %>
                </div>
            </div>
            <div class="md:w-2/3 p-6">
                <h2 class="text-2xl font-semibold mb-2"><%= product.name %></h2>
                <div class="flex items-center mb-4">
                    <span class="font-semibold text-lg text-green-600 mr-2">₹<%= product.price.toFixed(2) %></span>
                    <span class="text-gray-600"><%= product.shop_name %></span>
                </div>
                <% if (product.description) { %>
                    <div class="mb-6">
                        <h3 class="text-sm font-semibold text-gray-600 mb-1">Description</h3>
                        <p class="text-gray-700"><%= product.description %></p>
                    </div>
                <% } %>
                
                <% if (locals.user) { %>
                    <form action="/cart/add" method="POST" class="mb-6">
                        <input type="hidden" name="product_id" value="<%= product.id %>">
                        <input type="hidden" name="shop_id" value="<%= product.shop_id %>">
                        <div class="flex items-center">
                            <div class="mr-4">
                                <label for="quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity</label>
                                <input 
                                    type="number" 
                                    name="quantity" 
                                    id="quantity" 
                                    value="1" 
                                    min="1" 
                                    class="w-16 border border-gray-300 p-2 rounded text-center"
                                >
                            </div>
                            <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                                Add to Cart
                            </button>
                        </div>
                    </form>
                <% } else { %>
                    <div class="mb-6">
                        <a href="/login" class="text-green-600 hover:underline">Login</a> to add this item to your cart.
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    
    <% if (otherShopProducts && otherShopProducts.length > 0) { %>
        <div class="mt-8">
            <h3 class="text-xl font-semibold mb-4">Compare Prices</h3>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <table class="w-full">
                    <thead>
                        <tr class="bg-gray-100 text-left">
                            <th class="px-6 py-3">Shop</th>
                            <th class="px-6 py-3">Price</th>
                            <th class="px-6 py-3">Comparison</th>
                            <th class="px-6 py-3">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b">
                            <td class="px-6 py-4 font-medium"><%= product.shop_name %> (Current)</td>
                            <td class="px-6 py-4">₹<%= product.price.toFixed(2) %></td>
                            <td class="px-6 py-4">-</td>
                            <td class="px-6 py-4">-</td>
                        </tr>
                        <% otherShopProducts.forEach(otherProduct => { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="px-6 py-4"><%= otherProduct.shop_name %></td>
                                <td class="px-6 py-4">₹<%= otherProduct.price.toFixed(2) %></td>
                                <td class="px-6 py-4">
                                    <% if (otherProduct.price < product.price) { %>
                                        <span class="text-green-600">
                                            Save ₹<%= (product.price - otherProduct.price).toFixed(2) %> (<%= Math.round((product.price - otherProduct.price) / product.price * 100) %>%)
                                        </span>
                                    <% } else if (otherProduct.price > product.price) { %>
                                        <span class="text-red-600">
                                            ₹<%= (otherProduct.price - product.price).toFixed(2) %> more (<%= Math.round((otherProduct.price - product.price) / product.price * 100) %>%)
                                        </span>
                                    <% } else { %>
                                        <span class="text-gray-600">Same price</span>
                                    <% } %>
                                </td>
                                <td class="px-6 py-4">
                                    <% if (locals.user) { %>
                                        <form action="/cart/add" method="POST">
                                            <input type="hidden" name="product_id" value="<%= otherProduct.id %>">
                                            <input type="hidden" name="shop_id" value="<%= otherProduct.shop_id %>">
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit" class="bg-green-100 text-green-800 px-3 py-1 rounded hover:bg-green-200">
                                                Add to Cart
                                            </button>
                                        </form>
                                    <% } %>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    <% } %>
</main>

<%- include('../partials/footer') %> 