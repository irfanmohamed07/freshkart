<%- include('../partials/header') %>

    <div class="container max-w-[1280px] mx-auto px-4 md:px-10 py-8 min-h-screen">
        <!-- Header Section -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold mb-3 text-[#111318] dark:text-white">Shopping Cart</h1>
            <nav class="flex text-sm text-gray-500" aria-label="Breadcrumb">
                <ol class="inline-flex items-center space-x-1 md:space-x-3">
                    <li class="inline-flex items-center">
                        <a href="/" class="inline-flex items-center hover:text-primary">
                            <span class="material-symbols-outlined text-lg mr-2">home</span>
                            Home
                        </a>
                    </li>
                    <li>
                        <div class="flex items-center">
                            <span class="material-symbols-outlined text-gray-400 mx-1">chevron_right</span>
                            <a href="/shops" class="hover:text-primary">Shops</a>
                        </div>
                    </li>
                    <li aria-current="page">
                        <div class="flex items-center">
                            <span class="material-symbols-outlined text-gray-400 mx-1">chevron_right</span>
                            <span class="text-gray-900 font-medium">Cart</span>
                        </div>
                    </li>
                </ol>
            </nav>
        </div>

        <% if (cartItems && cartItems.length> 0) { %>
            <div class="flex flex-col lg:flex-row gap-8">
                <!-- Cart Items Section -->
                <div class="lg:w-8/12">
                    <div
                        class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl shadow-sm mb-6 overflow-hidden">
                        <div
                            class="bg-gray-50 dark:bg-gray-900 border-b border-[#dbdfe6] dark:border-gray-700 px-6 py-4">
                            <h2 class="text-lg font-bold text-[#111318] dark:text-white flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">shopping_cart</span>
                                <span>Cart Items (<%= cartItems.length %>)</span>
                            </h2>
                        </div>

                        <div class="divide-y divide-gray-100 dark:divide-gray-700">
                            <% cartItems.forEach(item=> { %>
                                <div class="p-6 transition-colors hover:bg-gray-50 dark:hover:bg-gray-700/50"
                                    data-item-id="<%= item.id %>">
                                    <div class="flex flex-col md:flex-row gap-6">
                                        <!-- Product Image -->
                                        <div class="flex-shrink-0">
                                            <div
                                                class="w-24 h-24 md:w-32 md:h-32 bg-gray-100 dark:bg-gray-700 rounded-lg p-2 flex items-center justify-center border border-gray-200 dark:border-gray-600">
                                                <% if (item.image_url) { %>
                                                    <img src="<%= item.image_url %>" alt="<%= item.product_name %>"
                                                        class="w-full h-full object-contain mix-blend-multiply">
                                                    <% } else { %>
                                                        <span
                                                            class="material-symbols-outlined text-4xl text-gray-400">image</span>
                                                        <% } %>
                                            </div>
                                        </div>

                                        <!-- Product Details -->
                                        <div class="flex-1">
                                            <div
                                                class="flex flex-col md:flex-row md:justify-between md:items-start gap-4">
                                                <div class="flex-1">
                                                    <h3 class="text-lg font-bold text-[#111318] dark:text-white mb-1">
                                                        <%= item.product_name %>
                                                    </h3>
                                                    <div class="flex flex-wrap items-center gap-2 mb-3">
                                                        <span
                                                            class="inline-flex items-center gap-1 bg-gray-100 dark:bg-gray-700 text-gray-600 dark:text-gray-300 text-xs px-2 py-1 rounded font-medium">
                                                            <span
                                                                class="material-symbols-outlined text-xs">storefront</span>
                                                            <%= item.shop_name %>
                                                        </span>

                                                        <% if (item.alternatives && item.alternatives.length> 0) { %>
                                                            <div class="relative group">
                                                                <button
                                                                    class="text-xs text-primary hover:text-blue-700 font-bold flex items-center gap-1 px-2 py-1 rounded bg-blue-50 dark:bg-blue-900/30 transition-colors">
                                                                    <span
                                                                        class="material-symbols-outlined text-xs">compare_arrows</span>
                                                                    <span>Compare Prices</span>
                                                                    <span
                                                                        class="material-symbols-outlined text-xs">expand_more</span>
                                                                </button>
                                                                <div
                                                                    class="hidden group-hover:block absolute left-0 z-10 mt-2 bg-white dark:bg-gray-800 rounded-xl shadow-xl p-4 w-72 border border-[#dbdfe6] dark:border-gray-700 ring-1 ring-black ring-opacity-5">
                                                                    <p
                                                                        class="text-xs font-bold mb-3 text-gray-500 uppercase tracking-wide pb-2 border-b border-gray-100 dark:border-gray-700">
                                                                        Available Options</p>
                                                                    <div
                                                                        class="space-y-2 max-h-48 overflow-y-auto custom-scrollbar">
                                                                        <% item.alternatives.forEach(alt=> { %>
                                                                            <div
                                                                                class="flex justify-between items-center p-2 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group/item">
                                                                                <div>
                                                                                    <div
                                                                                        class="text-sm font-bold text-gray-900 dark:text-white">
                                                                                        <%= alt.shop_name %>
                                                                                    </div>
                                                                                    <div class="text-xs text-gray-500">₹
                                                                                        <%= (parseFloat(alt.price)).toFixed(2)
                                                                                            %>
                                                                                    </div>
                                                                                </div>
                                                                                <% if (parseFloat(alt.price) <
                                                                                    parseFloat(item.price)) { %>
                                                                                    <span
                                                                                        class="bg-green-100 text-green-700 text-[10px] font-bold px-1.5 py-0.5 rounded">
                                                                                        Save ₹<%=
                                                                                            (parseFloat(item.price) -
                                                                                            parseFloat(alt.price)).toFixed(2)
                                                                                            %>
                                                                                    </span>
                                                                                    <% } %>
                                                                                        <button
                                                                                            class="shop-switch-btn opacity-0 group-hover/item:opacity-100 ml-2 text-xs bg-primary text-white hover:bg-blue-700 px-3 py-1.5 rounded font-bold transition-all"
                                                                                            data-item-id="<%= item.id %>"
                                                                                            data-shop-id="<%= alt.shop_id %>"
                                                                                            data-product-id="<%= alt.id %>">
                                                                                            Switch
                                                                                        </button>
                                                                            </div>
                                                                            <% }) %>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <% } %>
                                                    </div>

                                                    <% if (item.cheapestAlternative && item.cheapestAlternative.price <
                                                        item.price) { %>
                                                        <div
                                                            class="text-sm text-green-600 bg-green-50 border border-green-200 rounded-lg p-2.5 mt-2 flex items-start gap-2">
                                                            <span
                                                                class="material-symbols-outlined text-green-600 text-lg mt-0.5">savings</span>
                                                            <span>Cheaper at <strong>
                                                                    <%= item.cheapestAlternative.shop_name %>
                                                                </strong>: ₹<%=
                                                                    (parseFloat(item.cheapestAlternative.price)).toFixed(2)
                                                                    %></span>
                                                        </div>
                                                        <% } %>
                                                </div>

                                                <!-- Price and Quantity -->
                                                <div class="flex flex-col items-end gap-4">
                                                    <div class="text-xl font-black text-[#111318] dark:text-white">
                                                        ₹<%= (parseFloat(item.price)).toFixed(2) %>
                                                    </div>

                                                    <div class="flex items-center">
                                                        <div
                                                            class="flex items-center border border-[#dbdfe6] dark:border-gray-600 rounded-lg overflow-hidden bg-white dark:bg-gray-800">
                                                            <button
                                                                class="quantity-btn decrease px-3 py-1.5 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                                                                data-action="decrease"
                                                                data-item-id="<%= item.id %>">−</button>
                                                            <input type="number" value="<%= item.quantity %>" min="1"
                                                                class="quantity-input w-12 text-center py-1.5 border-x border-[#dbdfe6] dark:border-gray-600 text-sm font-bold bg-transparent focus:outline-none"
                                                                data-item-id="<%= item.id %>"
                                                                data-price="<%= item.price %>">
                                                            <button
                                                                class="quantity-btn increase px-3 py-1.5 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-gray-700 transition-colors"
                                                                data-action="increase"
                                                                data-item-id="<%= item.id %>">+</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <!-- Subtotal and Actions -->
                                            <div
                                                class="flex justify-between items-center mt-6 pt-4 border-t border-gray-100 dark:border-gray-700">
                                                <div class="font-bold text-gray-900 dark:text-white">
                                                    Subtotal: <span class="text-primary">₹<%= (parseFloat(item.price) *
                                                            item.quantity).toFixed(2) %></span>
                                                </div>
                                                <button
                                                    class="remove-btn flex items-center gap-1 text-red-500 hover:text-red-700 text-sm font-medium transition-colors hover:bg-red-50 px-3 py-1.5 rounded-lg"
                                                    data-item-id="<%= item.id %>">
                                                    <span class="material-symbols-outlined text-lg">delete</span>
                                                    <span>Remove</span>
                                                </button>
                                            </div>

                                            <!-- Savings Alert -->
                                            <% if (item.potentialSavings> 0) { %>
                                                <div
                                                    class="shop-switch-card mt-4 bg-green-50 border border-green-200 rounded-xl p-4">
                                                    <div class="flex items-start gap-4">
                                                        <div
                                                            class="flex-shrink-0 w-10 h-10 bg-green-500 rounded-full flex items-center justify-center text-white shadow-sm">
                                                            <span class="material-symbols-outlined">savings</span>
                                                        </div>
                                                        <div class="flex-1">
                                                            <h4 class="font-bold text-green-900 mb-1">Save ₹<%=
                                                                    (parseFloat(item.potentialSavings)).toFixed(2) %>
                                                                    instantly!</h4>
                                                            <p class="text-sm text-green-800 mb-3">
                                                                Switch to <strong>
                                                                    <%= item.cheapestAlternative.shop_name %>
                                                                </strong> for ₹<%=
                                                                    (parseFloat(item.cheapestAlternative.price)).toFixed(2)
                                                                    %>
                                                            </p>
                                                            <div class="flex flex-wrap gap-2">
                                                                <button
                                                                    class="shop-switch-btn bg-green-600 hover:bg-green-700 text-white text-sm px-4 py-2 rounded-lg font-bold flex items-center gap-2 transition-all shadow-sm hover:shadow"
                                                                    data-item-id="<%= item.id %>"
                                                                    data-shop-id="<%= item.cheapestAlternative.shop_id %>"
                                                                    data-product-id="<%= item.cheapestAlternative.id %>">
                                                                    <span
                                                                        class="material-symbols-outlined text-sm">swap_horiz</span>
                                                                    <span>Switch to <%=
                                                                            item.cheapestAlternative.shop_name %></span>
                                                                </button>
                                                                <button
                                                                    class="keep-shop-btn bg-white border border-green-200 hover:bg-green-50 text-green-700 text-sm px-4 py-2 rounded-lg font-bold transition-colors">
                                                                    Keep Current
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>
                                </div>
                                <% }) %>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="flex flex-wrap gap-4 mb-6">
                        <a href="/shops"
                            class="flex items-center gap-2 text-gray-600 hover:text-primary font-bold px-4 py-2 rounded-lg hover:bg-gray-100 transition-colors">
                            <span class="material-symbols-outlined">arrow_back</span>
                            <span>Continue Shopping</span>
                        </a>

                        <form action="/cart/clear" method="POST" class="ml-auto"
                            onsubmit="return confirm('Are you sure you want to clear your cart?');">
                            <button type="submit"
                                class="flex items-center gap-2 text-red-500 hover:text-red-700 font-bold px-4 py-2 rounded-lg hover:bg-red-50 transition-colors">
                                <span class="material-symbols-outlined">remove_shopping_cart</span>
                                <span>Clear Cart</span>
                            </button>
                        </form>
                    </div>
                </div>

                <!-- Order Summary -->
                <div class="lg:w-4/12">
                    <div
                        class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl shadow-sm sticky top-24 overflow-hidden">
                        <div
                            class="bg-gray-50 dark:bg-gray-900 border-b border-[#dbdfe6] dark:border-gray-700 px-6 py-4">
                            <h2 class="text-lg font-bold text-[#111318] dark:text-white flex items-center gap-2">
                                <span class="material-symbols-outlined text-primary">receipt_long</span>
                                <span>Order Summary</span>
                            </h2>
                        </div>
                        <div class="p-6">
                            <div class="space-y-3 mb-4">
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">Items (<%= cartItems.length %>
                                            )</span>
                                    <span class="font-bold text-gray-900 dark:text-white">₹<%=
                                            (parseFloat(cartTotal)).toFixed(2) %></span>
                                </div>
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">Delivery Fee</span>
                                    <span class="text-green-600 font-bold">Free</span>
                                </div>
                                <div class="flex justify-between text-sm">
                                    <span class="text-gray-500 dark:text-gray-400">Taxes</span>
                                    <span class="text-gray-500 dark:text-gray-400">Calculated at checkout</span>
                                </div>
                            </div>

                            <div class="bg-gray-50 dark:bg-gray-700/50 p-4 rounded-xl mb-6">
                                <div class="flex justify-between items-center">
                                    <span class="text-lg font-bold text-gray-900 dark:text-white">Total</span>
                                    <span class="cart-total text-2xl font-black text-primary">₹<%=
                                            (parseFloat(cartTotal)).toFixed(2) %></span>
                                </div>
                            </div>

                            <% if (totalPotentialSavings> 0) { %>
                                <div class="bg-green-50 border border-green-200 rounded-xl p-4 mb-6">
                                    <div class="flex items-start gap-3">
                                        <div
                                            class="flex-shrink-0 w-8 h-8 bg-green-500 rounded-full flex items-center justify-center text-white">
                                            <span class="material-symbols-outlined text-sm">savings</span>
                                        </div>
                                        <div class="flex-1">
                                            <div class="text-xs font-bold text-green-800 uppercase tracking-wide mb-1">
                                                Smart Savings
                                            </div>
                                            <div class="text-xl font-black text-green-700 mb-1">
                                                ₹<%= (parseFloat(totalPotentialSavings)).toFixed(2) %>
                                            </div>
                                            <p class="text-xs text-green-700 leading-tight">
                                                Optimize your cart to save <strong>
                                                    <%= Math.round((parseFloat(totalPotentialSavings) /
                                                        parseFloat(cartTotal)) * 100) %>%
                                                </strong>!
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <% } %>

                                    <a href="/checkout"
                                        class="w-full bg-primary hover:bg-blue-700 text-white font-bold py-4 px-6 rounded-xl flex items-center justify-center gap-2 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                                        <span>Proceed to Checkout</span>
                                        <span class="material-symbols-outlined">arrow_forward</span>
                                    </a>

                                    <div class="mt-6 flex items-center justify-center gap-2 text-xs text-gray-400">
                                        <span class="material-symbols-outlined text-sm">lock</span>
                                        <span>Secure Checkout with 256-bit SSL</span>
                                    </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ML Recommendations: Best Deals (Keep logic, update style) -->
            <% if (mlBestDeals && mlBestDeals.length> 0) { %>
                <div class="mt-12">
                    <h2 class="text-2xl font-bold mb-6 flex items-center gap-2">
                        <span class="material-symbols-outlined text-yellow-500">local_offer</span>
                        <span>Better Deals Available</span>
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                        <% mlBestDeals.forEach(deal=> { %>
                            <div
                                class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl p-5 shadow-sm hover:shadow-md transition-shadow">
                                <h3 class="font-bold text-sm text-[#111318] dark:text-white mb-2 line-clamp-1">
                                    <%= deal.name %>
                                </h3>

                                <div class="flex items-center justify-between mb-3">
                                    <div>
                                        <span class="text-xs text-gray-500 line-through">₹<%=
                                                parseFloat(deal.cart_price).toFixed(2) %></span>
                                        <span class="text-lg font-black text-green-600 ml-1">₹<%=
                                                parseFloat(deal.alt_price).toFixed(2) %></span>
                                    </div>
                                    <span class="bg-green-100 text-green-700 text-xs font-bold px-2 py-1 rounded">
                                        Save ₹<%= parseFloat(deal.savings).toFixed(2) %>
                                    </span>
                                </div>
                                <div class="text-xs text-gray-500 mb-4 flex items-center gap-1">
                                    <span class="material-symbols-outlined text-sm">store</span>
                                    <%= deal.shop_name %>
                                </div>
                                <% if (locals.user) { %>
                                    <form action="/cart/add" method="POST">
                                        <input type="hidden" name="product_id" value="<%= deal.alt_product_id %>">
                                        <input type="hidden" name="shop_id" value="<%= deal.shop_id %>">
                                        <input type="hidden" name="quantity" value="1">
                                        <button type="submit"
                                            class="w-full bg-white border border-green-500 text-green-600 hover:bg-green-50 font-bold py-2 rounded-lg text-sm transition-colors flex items-center justify-center gap-1">
                                            <span class="material-symbols-outlined text-sm">add_shopping_cart</span>
                                            Add This Deal
                                        </button>
                                    </form>
                                    <% } %>
                            </div>
                            <% }) %>
                    </div>
                </div>
                <% } %>

                    <% } else { %>
                        <!-- Empty Cart State -->
                        <div
                            class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl p-16 text-center shadow-sm">
                            <div
                                class="inline-flex items-center justify-center w-24 h-24 bg-gray-100 dark:bg-gray-700 rounded-full mb-6">
                                <span
                                    class="material-symbols-outlined text-5xl text-gray-400">production_quantity_limits</span>
                            </div>
                            <h2 class="text-3xl font-black mb-3 text-[#111318] dark:text-white">Your cart is empty</h2>
                            <p class="text-gray-500 mb-8 text-lg max-w-md mx-auto">Looks like you haven't added any
                                parts or services to your cart yet.</p>
                            <a href="/shops"
                                class="inline-flex items-center gap-2 bg-primary hover:bg-blue-700 text-white font-bold py-4 px-8 rounded-xl transition-all">
                                <span>Browse Catalog</span>
                                <span class="material-symbols-outlined">arrow_forward</span>
                            </a>
                        </div>
                        <% } %>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Keep existing JS logic but update selectors if needed
            // ... (The original JS logic for updates/removal/switch was good, preserving it)
            const quantityButtons = document.querySelectorAll('.quantity-btn');
            const quantityInputs = document.querySelectorAll('.quantity-input');
            const removeButtons = document.querySelectorAll('.remove-btn');
            const shopSwitchButtons = document.querySelectorAll('.shop-switch-btn');

            // Update quantity when buttons are clicked
            quantityButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const itemId = this.dataset.itemId;
                    const action = this.dataset.action;
                    const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
                    let value = parseInt(input.value);

                    if (action === 'increase') {
                        value++;
                    } else if (action === 'decrease' && value > 1) {
                        value--;
                    }

                    input.value = value;
                    updateCartItem(itemId, value);
                });
            });

            // Update quantity when input is changed
            quantityInputs.forEach(input => {
                input.addEventListener('change', function () {
                    const itemId = this.dataset.itemId;
                    let value = parseInt(this.value);

                    if (value < 1) {
                        value = 1;
                        this.value = 1;
                    }

                    updateCartItem(itemId, value);
                });
            });

            // Remove item from cart
            removeButtons.forEach(button => {
                button.addEventListener('click', function () {
                    const itemId = this.dataset.itemId;
                    if (confirm('Are you sure you want to remove this item from your cart?')) {
                        removeCartItem(itemId);
                    }
                });
            });

            // Switch shop for an item
            shopSwitchButtons.forEach(button => {
                button.addEventListener('click', async function () {
                    const itemId = this.dataset.itemId;
                    const shopId = this.dataset.shopId;
                    const productId = this.dataset.productId;

                    if (!itemId || !shopId || !productId) return;

                    const originalText = this.innerHTML;
                    this.innerHTML = '<span class="material-symbols-outlined animate-spin text-sm">refresh</span>';
                    this.disabled = true;

                    try {
                        const response = await fetch('/cart/update-shop', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({
                                item_id: itemId,
                                shop_id: shopId,
                                product_id: productId
                            })
                        });

                        const data = await response.json();

                        if (data.success) {
                            window.location.reload();
                        } else {
                            throw new Error(data.message || 'Failed to switch shop');
                        }
                    } catch (error) {
                        console.error('Error switching shop:', error);
                        this.innerHTML = originalText;
                        this.disabled = false;
                        alert('Failed to switch shop: ' + error.message);
                    }
                });
            });

            // Keep shop button
            document.querySelectorAll('.keep-shop-btn').forEach(button => {
                button.addEventListener('click', function () {
                    const cardElement = this.closest('.shop-switch-card');
                    if (cardElement) {
                        cardElement.style.display = 'none';
                    }
                });
            });

            // Update cart item quantity
            function updateCartItem(itemId, quantity) {
                fetch('/cart/update-quantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        item_id: itemId,
                        quantity: quantity
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Ideally update UI without reload, but reload is safer for totals
                            window.location.reload();
                        } else {
                            alert(data.message || 'Failed to update quantity');
                        }
                    })
                    .catch(error => {
                        console.error('Error updating quantity:', error);
                    });
            }

            // Remove item from cart
            function removeCartItem(itemId) {
                fetch('/cart/remove', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        item_id: itemId
                    })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            const itemElement = document.querySelector(`[data-item-id="${itemId}"]`);
                            if (itemElement) {
                                itemElement.style.transition = 'opacity 0.3s';
                                itemElement.style.opacity = '0';
                                setTimeout(() => {
                                    window.location.reload();
                                }, 300);
                            }
                        } else {
                            alert(data.message || 'Failed to remove item');
                        }
                    })
                    .catch(error => {
                        console.error('Error removing item:', error);
                    });
            }
        });
    </script>

    <%- include('../partials/footer') %>