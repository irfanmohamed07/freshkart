<%- include('../partials/header') %>

<div class="container max-w-screen-xl mx-auto px-4 py-6">
    <div class="mb-6">
        <h1 class="text-2xl font-bold mb-2">Your Shopping Cart</h1>
        <div class="flex items-center text-sm text-gray-500">
            <a href="/" class="hover:text-gray-700">Home</a>
            <span class="mx-2">›</span>
            <a href="/shops" class="hover:text-gray-700">Shops</a>
            <span class="mx-2">›</span>
            <span>Cart</span>
        </div>
    </div>
    
    <% if (cartItems && cartItems.length > 0) { %>
        <div class="flex flex-col lg:flex-row gap-6">
            <!-- Cart Items -->
            <div class="lg:w-8/12">
                <div class="bg-white rounded-lg shadow-md mb-6">
                    <div class="border-b border-gray-200 p-4">
                        <h2 class="text-lg font-semibold">Cart Items (<%= cartItems.length %>)</h2>
                    </div>
                    
                    <div class="p-4">
                        <% cartItems.forEach(item => { %>
                            <div class="flex flex-col md:flex-row gap-6 py-6 border-b border-gray-100 last:border-0" data-item-id="<%= item.id %>">
                                <!-- Product Image -->
                                <div class="w-28 h-28 md:w-36 md:h-36 flex-shrink-0 mx-auto md:mx-0">
                                    <% if (item.image_url) { %>
                                        <img src="<%= item.image_url %>" alt="<%= item.product_name %>" class="w-full h-full object-contain rounded-md">
                                    <% } else { %>
                                        <div class="w-full h-full bg-gray-200 rounded-md flex items-center justify-center">
                                            <i class="fas fa-shopping-basket text-gray-400 text-2xl"></i>
                                        </div>
                                    <% } %>
                                </div>
                                
                                <!-- Product Details -->
                                <div class="flex-1 mt-4 md:mt-0">
                                    <div class="flex flex-col md:flex-row md:justify-between">
                                        <div>
                                            <h3 class="font-medium"><%= item.product_name %></h3>
                                            <div class="flex items-center mt-1 text-sm text-gray-500">
                                                <span>From <%= item.shop_name %></span>
                                                
                                                <% if (item.alternatives && item.alternatives.length > 0) { %>
                                                    <div class="relative group ml-1">
                                                        <button class="text-xs text-green-600 hover:text-green-800 flex items-center">
                                                            <span>Compare</span>
                                                            <i class="fas fa-chevron-down ml-1 text-xs"></i>
                                                        </button>
                                                        <div class="hidden group-hover:block absolute left-0 z-10 mt-1 bg-white rounded-md shadow-lg p-3 w-60">
                                                            <p class="text-xs font-semibold mb-2 text-gray-500 pb-1 border-b">Available at other shops:</p>
                                                            <% item.alternatives.forEach(alt => { %>
                                                                <div class="py-1.5 flex justify-between items-center">
                                                                    <div>
                                                                        <div class="text-sm"><%= alt.shop_name %></div>
                                                                        <div class="text-xs text-gray-500">₹<%= (parseFloat(alt.price)).toFixed(2) %></div>
                                                                    </div>
                                                                    <% if (parseFloat(alt.price) < parseFloat(item.price)) { %>
                                                                        <div class="text-xs text-green-600 font-medium">
                                                                            Save ₹<%= (parseFloat(item.price) - parseFloat(alt.price)).toFixed(2) %>
                                                                        </div>
                                                                    <% } %>
                                                                    <button 
                                                                        class="shop-switch-btn ml-2 text-xs bg-green-100 text-green-800 hover:bg-green-200 px-2 py-1 rounded"
                                                                        data-item-id="<%= item.id %>"
                                                                        data-shop-id="<%= alt.shop_id %>"
                                                                        data-product-id="<%= alt.id %>"
                                                                    >
                                                                        Switch
                                                                    </button>
                                                                </div>
                                                            <% }) %>
                                                        </div>
                                                    </div>
                                                <% } %>
                                            </div>
                                            
                                            <% if (item.cheapestAlternative && item.cheapestAlternative.price < item.price) { %>
                                                <div class="text-xs text-green-600 mt-1 flex items-center">
                                                    <i class="fas fa-tags mr-1"></i>
                                                    <span>Cheaper at <%= item.cheapestAlternative.shop_name %>: ₹<%= (parseFloat(item.cheapestAlternative.price)).toFixed(2) %></span>
                                                </div>
                                            <% } %>
                                        </div>
                                        
                                        <div class="mt-3 md:mt-0 text-right">
                                            <div class="font-medium">₹<%= (parseFloat(item.price)).toFixed(2) %></div>
                                            <div class="flex items-center justify-end mt-2">
                                                <div class="flex items-center border border-gray-300 rounded-md overflow-hidden">
                                                    <button 
                                                        class="quantity-btn decrease bg-gray-100 px-3 py-1 hover:bg-gray-200"
                                                        data-action="decrease"
                                                        data-item-id="<%= item.id %>"
                                                    >−</button>
                                                    <input 
                                                        type="number" 
                                                        value="<%= item.quantity %>" 
                                                        min="1" 
                                                        class="quantity-input w-12 text-center border-l border-r border-gray-300 py-1" 
                                                        data-item-id="<%= item.id %>"
                                                        data-price="<%= item.price %>"
                                                    >
                                                    <button 
                                                        class="quantity-btn increase bg-gray-100 px-3 py-1 hover:bg-gray-200"
                                                        data-action="increase"
                                                        data-item-id="<%= item.id %>"
                                                    >+</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="flex justify-between items-center mt-4">
                                        <div class="subtotal font-medium">
                                            Subtotal: ₹<%= (parseFloat(item.price) * item.quantity).toFixed(2) %>
                                        </div>
                                        <button 
                                            class="remove-item text-red-500 hover:text-red-700 text-sm flex items-center"
                                            data-item-id="<%= item.id %>"
                                        >
                                            <i class="fas fa-trash-alt mr-1"></i>
                                            <span>Remove</span>
                                        </button>
                                    </div>
                                    
                                    <% if (item.potentialSavings > 0) { %>
                                        <div class="mt-2 px-4 py-3 bg-green-50 border border-green-100 rounded-md">
                                            <div class="flex items-start">
                                                <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-500 mr-3">
                                                    <i class="fas fa-tags"></i>
                                                </div>
                                                <div class="flex-1">
                                                    <h4 class="font-medium text-green-800">Save ₹<%= (parseFloat(item.potentialSavings)).toFixed(2) %> on this item!</h4>
                                                    <p class="text-sm text-green-700 mt-1">
                                                        Same product is available for <span class="font-medium">₹<%= (parseFloat(item.cheapestAlternative.price)).toFixed(2) %></span> at <%= item.cheapestAlternative.shop_name %>
                                                    </p>
                                                    <div class="mt-2 flex flex-wrap gap-2">
                                                        <button 
                                                            class="shop-switch-btn bg-green-600 hover:bg-green-700 text-white text-sm px-3 py-1.5 rounded-md flex items-center transition-colors"
                                                            data-item-id="<%= item.id %>"
                                                            data-shop-id="<%= item.cheapestAlternative.shop_id %>"
                                                            data-product-id="<%= item.cheapestAlternative.id %>"
                                                        >
                                                            <i class="fas fa-exchange-alt mr-1.5"></i>
                                                            <span>Switch to <%= item.cheapestAlternative.shop_name %></span>
                                                        </button>
                                                        <button class="bg-white border border-green-200 hover:bg-green-50 text-green-700 text-sm px-3 py-1.5 rounded-md flex items-center keep-shop-btn transition-colors">
                                                            <i class="fas fa-store mr-1.5"></i>
                                                            <span>Keep current shop</span>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% } else if (item.alternatives && item.alternatives.length > 0) { %>
                                        <div class="mt-2 px-4 py-3 bg-gray-50 border border-gray-100 rounded-md">
                                            <div class="text-sm text-gray-700">
                                                <details>
                                                    <summary class="cursor-pointer font-medium flex items-center">
                                                        <i class="fas fa-store-alt mr-1.5"></i>
                                                        <span>Available at <%= item.alternatives.length %> other shops</span>
                                                        <i class="fas fa-chevron-down ml-1.5 text-xs"></i>
                                                    </summary>
                                                    <div class="mt-2 space-y-2">
                                                        <% item.alternatives.forEach(alt => { %>
                                                            <div class="flex justify-between items-center py-1.5 px-2 bg-white rounded border border-gray-100">
                                                                <div>
                                                                    <div class="font-medium"><%= alt.shop_name %></div>
                                                                    <div class="text-sm text-gray-500">₹<%= (parseFloat(alt.price)).toFixed(2) %></div>
                                                                </div>
                                                                <button 
                                                                    class="shop-switch-btn text-xs bg-gray-100 hover:bg-gray-200 text-gray-800 px-2.5 py-1.5 rounded flex items-center"
                                                                    data-item-id="<%= item.id %>"
                                                                    data-shop-id="<%= alt.shop_id %>"
                                                                    data-product-id="<%= alt.id %>"
                                                                >
                                                                    <i class="fas fa-exchange-alt mr-1"></i>
                                                                    <span>Switch</span>
                                                                </button>
                                                            </div>
                                                        <% }) %>
                                                    </div>
                                                </details>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
                
                <div class="flex flex-wrap gap-4">
                    <a href="/shops" class="flex items-center text-gray-700 hover:text-gray-900">
                        <i class="fas fa-arrow-left mr-2"></i>
                        <span>Continue Shopping</span>
                    </a>
                    
                    <form action="/cart/clear" method="POST" class="inline-block">
                        <button type="submit" class="flex items-center text-red-500 hover:text-red-700">
                            <i class="fas fa-times mr-2"></i>
                            <span>Clear Cart</span>
                        </button>
                    </form>
                </div>
            </div>
            
            <!-- Order Summary -->
            <div class="lg:w-4/12 mt-6 lg:mt-0">
                <div class="bg-white rounded-lg shadow-md sticky top-24">
                    <div class="border-b border-gray-200 p-4">
                        <h2 class="text-lg font-semibold">Order Summary</h2>
                    </div>
                    <div class="p-4">
                        <div class="space-y-3 pt-2 pb-4 border-b border-gray-200">
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-600">Items (<%= cartItems.length %>)</span>
                                <span>₹<%= (parseFloat(cartTotal)).toFixed(2) %></span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-600">Delivery Fee</span>
                                <span class="text-green-600">Free</span>
                            </div>
                            <div class="flex justify-between text-sm">
                                <span class="text-gray-600">Taxes</span>
                                <span>Included</span>
                            </div>
                        </div>
                        
                        <div class="flex justify-between py-4 text-lg font-bold">
                            <span>Total</span>
                            <span class="cart-total">₹<%= (parseFloat(cartTotal)).toFixed(2) %></span>
                        </div>
                        
                        <% if (totalPotentialSavings > 0) { %>
                            <div class="bg-green-50 border border-green-100 rounded-md p-4 mb-4">
                                <div class="flex items-start">
                                    <div class="flex-shrink-0 w-10 h-10 bg-green-100 rounded-full flex items-center justify-center text-green-500 mr-3">
                                        <i class="fas fa-piggy-bank"></i>
                                    </div>
                                    <div>
                                        <div class="text-sm font-medium text-green-800">
                                            Potential Cart Savings
                                        </div>
                                        <div class="text-xl font-bold text-green-700 mt-1">
                                            ₹<%= (parseFloat(totalPotentialSavings)).toFixed(2) %>
                                        </div>
                                        <p class="text-xs text-green-600 mt-1">
                                            Switch to shops with better prices to save <%= Math.round((parseFloat(totalPotentialSavings) / parseFloat(cartTotal)) * 100) %>% on your order!
                                        </p>
                                        <div class="mt-2">
                                            <span class="text-xs bg-white border border-green-200 text-green-700 px-2 py-0.5 rounded-full">
                                                Best value for money
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% } %>
                        
                        <a href="/checkout" class="w-full zepto-btn py-3 font-semibold flex items-center justify-center">
                            <span>Proceed to Checkout</span>
                            <i class="fas fa-arrow-right ml-2"></i>
                        </a>
                        
                        <div class="mt-4">
                            <div class="flex items-center justify-center">
                                <div class="text-xs text-gray-500 mr-1">Secure Checkout:</div>
                                <img src="https://cdn.razorpay.com/static/assets/merchant-badge/badge-dark.png" alt="Razorpay" class="h-6">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    <% } else { %>
        <div class="bg-white rounded-lg shadow-md p-10 text-center">
            <div class="w-32 h-32 mx-auto bg-gray-100 rounded-full flex items-center justify-center mb-6">
                <i class="fas fa-shopping-cart text-5xl text-gray-300"></i>
            </div>
            <h2 class="text-2xl font-semibold mb-2 text-gray-800">Your cart is empty</h2>
            <p class="text-gray-600 mb-6">Looks like you haven't added any items to your cart yet.</p>
            <a href="/shops" class="zomato-btn py-2 px-6 inline-block">
                <i class="fas fa-shopping-bag mr-2"></i>
                <span>Browse Shops</span>
            </a>
        </div>
    <% } %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle quantity changes
    const quantityButtons = document.querySelectorAll('.quantity-btn');
    const quantityInputs = document.querySelectorAll('.quantity-input');
    const removeButtons = document.querySelectorAll('.remove-item');
    const shopSwitchButtons = document.querySelectorAll('.shop-switch-btn');
    
    // Update quantity when buttons are clicked
    quantityButtons.forEach(button => {
        button.addEventListener('click', function() {
            const itemId = this.dataset.itemId;
            const action = this.dataset.action;
            const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
            let value = parseInt(input.value);
            
            if (action === 'increase') {
                value++;
            } else if (action === 'decrease' && value > 1) {
                value--;
            }
            
            input.value = value;
            updateCartItem(itemId, value);
        });
    });
    
    // Update quantity when input is changed
    quantityInputs.forEach(input => {
        input.addEventListener('change', function() {
            const itemId = this.dataset.itemId;
            let value = parseInt(this.value);
            
            // Ensure value is at least 1
            if (value < 1) {
                value = 1;
                this.value = 1;
            }
            
            updateCartItem(itemId, value);
        });
    });
    
    // Remove item from cart
    removeButtons.forEach(button => {
        button.addEventListener('click', function() {
            const itemId = this.dataset.itemId;
            removeCartItem(itemId);
        });
    });
    
    // Switch shop for an item
    shopSwitchButtons.forEach(button => {
        button.addEventListener('click', function() {
            const itemId = this.dataset.itemId;
            const shopId = this.dataset.shopId;
            
            updateShop(itemId, shopId);
        });
    });
    
    // Update cart item quantity
    function updateCartItem(itemId, quantity) {
        fetch('/cart/update-quantity', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                item_id: itemId,
                quantity: quantity
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                updateCartUI();
            } else {
                alert(data.message || 'Failed to update quantity');
            }
        })
        .catch(error => {
            console.error('Error updating quantity:', error);
        });
    }
    
    // Remove item from cart
    function removeCartItem(itemId) {
        fetch('/cart/remove', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                item_id: itemId
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Remove the item from DOM
                const itemElement = document.querySelector(`[data-item-id="${itemId}"]`);
                if (itemElement) {
                    itemElement.remove();
                }
                
                // Reload the page if no items left
                const remainingItems = document.querySelectorAll('[data-item-id]');
                if (remainingItems.length === 0) {
                    window.location.reload();
                } else {
                    updateCartUI();
                }
            } else {
                alert(data.message || 'Failed to remove item');
            }
        })
        .catch(error => {
            console.error('Error removing item:', error);
        });
    }
    
    // Update shop for an item
    function updateShop(itemId, shopId) {
        fetch('/cart/update-shop', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                item_id: itemId,
                shop_id: shopId
            })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Reload the page to reflect changes
                window.location.reload();
            } else {
                alert(data.message || 'Failed to update shop');
            }
        })
        .catch(error => {
            console.error('Error updating shop:', error);
        });
    }
    
    // Update cart UI
    function updateCartUI() {
        // Recalculate subtotals and total
        let total = 0;
        
        document.querySelectorAll('[data-item-id]').forEach(item => {
            const itemId = item.dataset.itemId;
            const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
            const quantity = parseInt(input.value);
            const price = parseFloat(input.dataset.price);
            const subtotal = price * quantity;
            
            // Update subtotal display
            const subtotalElement = item.querySelector('.subtotal');
            if (subtotalElement) {
                subtotalElement.textContent = `Subtotal: ₹${subtotal.toFixed(2)}`;
            }
            
            total += subtotal;
        });
        
        // Update total display
        const totalElement = document.querySelector('.cart-total');
        if (totalElement) {
            totalElement.textContent = `₹${total.toFixed(2)}`;
        }
    }
});

// Shop switching functionality
const shopSwitchButtons = document.querySelectorAll('.shop-switch-btn');
const keepShopButtons = document.querySelectorAll('.keep-shop-btn');

// Process shop switch
shopSwitchButtons.forEach(button => {
    button.addEventListener('click', async function() {
        const itemId = this.dataset.itemId;
        const shopId = this.dataset.shopId;
        const parentCard = this.closest('[data-item-id]');
        
        if (!itemId || !shopId || !parentCard) return;
        
        // Disable button and show loading state
        const originalText = this.innerHTML;
        this.innerHTML = '<div class="flex items-center justify-center"><div class="animate-spin rounded-full h-3 w-3 border-2 border-current border-t-transparent mr-1.5"></div><span>Switching...</span></div>';
        this.disabled = true;
        
        try {
            // Send request to update shop
            const response = await fetch('/cart/update-shop', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    item_id: itemId,
                    shop_id: shopId
                })
            });
            
            if (!response.ok) {
                throw new Error('Failed to switch shop');
            }
            
            const data = await response.json();
            
            if (data.success) {
                // Show success notification
                showNotification({
                    type: 'success',
                    title: 'Shop Changed',
                    message: 'Item has been moved to a different shop with a better price'
                });
                
                // Reload the page after a brief delay
                setTimeout(() => {
                    window.location.reload();
                }, 1500);
            } else {
                throw new Error(data.message || 'Failed to switch shop');
            }
        } catch (error) {
            console.error('Error switching shop:', error);
            // Reset button
            this.innerHTML = originalText;
            this.disabled = false;
            
            // Show error notification
            showNotification({
                type: 'error',
                title: 'Error',
                message: error.message || 'Failed to switch shop'
            });
        }
    });
});

// Handle keep shop button clicks (just hide the parent card)
keepShopButtons.forEach(button => {
    button.addEventListener('click', function() {
        const cardElement = this.closest('.bg-green-50');
        if (cardElement) {
            cardElement.style.display = 'none';
        }
    });
});

// Utility function to show notifications
function showNotification({ type = 'info', title, message }) {
    // Create notification container if it doesn't exist
    let container = document.getElementById('notification-container');
    if (!container) {
        container = document.createElement('div');
        container.id = 'notification-container';
        container.className = 'fixed top-4 right-4 z-50 w-72';
        document.body.appendChild(container);
    }
    
    // Create notification element
    const notification = document.createElement('div');
    notification.className = `bg-white rounded-lg shadow-lg border overflow-hidden mb-3 transform transition-all duration-300 translate-x-full opacity-0 ${type === 'success' ? 'border-green-200' : type === 'error' ? 'border-red-200' : 'border-blue-200'}`;
    
    // Set background color based on type
    const bgColor = type === 'success' ? 'bg-green-50' : type === 'error' ? 'bg-red-50' : 'bg-blue-50';
    const textColor = type === 'success' ? 'text-green-800' : type === 'error' ? 'text-red-800' : 'text-blue-800';
    const iconClass = type === 'success' ? 'fas fa-check-circle text-green-500' : type === 'error' ? 'fas fa-exclamation-circle text-red-500' : 'fas fa-info-circle text-blue-500';
    
    // Set notification content
    notification.innerHTML = `
        <div class="${bgColor} px-4 py-2 border-b ${type === 'success' ? 'border-green-100' : type === 'error' ? 'border-red-100' : 'border-blue-100'} flex justify-between items-center">
            <div class="font-medium ${textColor} flex items-center">
                <i class="${iconClass} mr-2"></i>
                <span>${title}</span>
            </div>
            <button class="text-gray-400 hover:text-gray-600">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="p-4">
            <p class="text-sm text-gray-700">${message}</p>
        </div>
    `;
    
    // Add to container
    container.appendChild(notification);
    
    // Add close functionality
    notification.querySelector('button').addEventListener('click', () => {
        notification.classList.add('translate-x-full', 'opacity-0');
        setTimeout(() => {
            notification.remove();
        }, 300);
    });
    
    // Show with animation
    setTimeout(() => {
        notification.classList.remove('translate-x-full', 'opacity-0');
    }, 10);
    
    // Auto-hide after 5 seconds
    setTimeout(() => {
        if (notification.parentElement) {
            notification.classList.add('translate-x-full', 'opacity-0');
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 300);
        }
    }, 5000);
}
</script>

<%- include('../partials/footer') %> 