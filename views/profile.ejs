<%- include('partials/header') %>

<main class="container mx-auto p-4 mt-8 flex-1">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-2xl mx-auto">
        <h2 class="text-2xl font-semibold mb-6">My Profile</h2>
        
        <div class="mb-6">
            <h3 class="text-lg font-medium mb-2">Account Information</h3>
            <div class="border-t border-b border-gray-200 py-3">
                <div class="grid grid-cols-3 gap-4 mb-2">
                    <div class="text-gray-600">Name:</div>
                    <div class="col-span-2 font-medium"><%= user.name %></div>
                </div>
                <div class="grid grid-cols-3 gap-4 mb-2">
                    <div class="text-gray-600">Email:</div>
                    <div class="col-span-2 font-medium"><%= user.email %></div>
                </div>
                <div class="grid grid-cols-3 gap-4">
                    <div class="text-gray-600">Account Type:</div>
                    <div class="col-span-2 font-medium"><%= user.isAdmin ? 'Administrator' : 'Customer' %></div>
                </div>
            </div>
        </div>
        
        <div class="flex justify-between">
            <a href="/" class="text-gray-600 hover:text-gray-800">
                Back to Home
            </a>
            <a href="/orders" class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700">
                View My Orders
            </a>
        </div>
    </div>
</main>

<%- include('partials/footer') %> 