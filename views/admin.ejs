<%- include('partials/header') %>

    <main class="container max-w-[1440px] mx-auto px-4 md:px-6 py-8 min-h-screen">
        <div class="flex items-center justify-between mb-8">
            <div>
                <h1 class="text-3xl font-black text-[#111318] dark:text-white mb-2">Admin Dashboard</h1>
                <p class="text-gray-500 dark:text-gray-400">Welcome back, <span
                        class="font-bold text-gray-900 dark:text-white">
                        <%= user.name %>
                    </span></p>
            </div>
            <div class="flex items-center gap-4">
                <button
                    class="flex items-center gap-2 px-4 py-2 bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors shadow-sm">
                    <span class="material-symbols-outlined text-gray-500">settings</span>
                    <span class="font-bold text-sm text-gray-700 dark:text-gray-300">Settings</span>
                </button>
                <a href="/logout"
                    class="flex items-center gap-2 px-4 py-2 bg-red-50 dark:bg-red-900/20 text-red-600 hover:bg-red-100 dark:hover:bg-red-900/30 font-bold rounded-lg transition-colors border border-red-100 dark:border-red-900/30">
                    <span class="material-symbols-outlined text-sm">logout</span>
                    <span class="text-sm">Log Out</span>
                </a>
            </div>
        </div>

        <!-- Quick Stats Overview -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <div
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 flex items-center justify-between group hover:border-blue-300 transition-all cursor-pointer">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Total Sales</p>
                    <h3 class="text-2xl font-black text-[#111318] dark:text-white">â‚¹1,24,500</h3>
                    <span class="text-xs font-medium text-green-600 flex items-center gap-1 mt-1">
                        <span class="material-symbols-outlined text-sm">trending_up</span> +12.5%
                    </span>
                </div>
                <div
                    class="w-12 h-12 rounded-full bg-blue-50 dark:bg-blue-900/20 text-primary flex items-center justify-center group-hover:bg-primary group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined">payments</span>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 flex items-center justify-between group hover:border-purple-300 transition-all cursor-pointer">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Active Orders</p>
                    <h3 class="text-2xl font-black text-[#111318] dark:text-white">45</h3>
                    <span class="text-xs font-medium text-blue-600 flex items-center gap-1 mt-1">
                        <span class="material-symbols-outlined text-sm">pending_actions</span> 5 New
                    </span>
                </div>
                <div
                    class="w-12 h-12 rounded-full bg-purple-50 dark:bg-purple-900/20 text-purple-600 flex items-center justify-center group-hover:bg-purple-600 group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined">shopping_bag</span>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 flex items-center justify-between group hover:border-orange-300 transition-all cursor-pointer">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Total Users</p>
                    <h3 class="text-2xl font-black text-[#111318] dark:text-white">1,250</h3>
                    <span class="text-xs font-medium text-green-600 flex items-center gap-1 mt-1">
                        <span class="material-symbols-outlined text-sm">trending_up</span> +5.2%
                    </span>
                </div>
                <div
                    class="w-12 h-12 rounded-full bg-orange-50 dark:bg-orange-900/20 text-orange-600 flex items-center justify-center group-hover:bg-orange-600 group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined">group</span>
                </div>
            </div>

            <div
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 flex items-center justify-between group hover:border-green-300 transition-all cursor-pointer">
                <div>
                    <p class="text-xs font-bold text-gray-500 uppercase tracking-wide mb-1">Products</p>
                    <h3 class="text-2xl font-black text-[#111318] dark:text-white">850</h3>
                    <span class="text-xs font-medium text-gray-500 flex items-center gap-1 mt-1">
                        In Stock
                    </span>
                </div>
                <div
                    class="w-12 h-12 rounded-full bg-green-50 dark:bg-green-900/20 text-green-600 flex items-center justify-center group-hover:bg-green-600 group-hover:text-white transition-colors">
                    <span class="material-symbols-outlined">inventory_2</span>
                </div>
            </div>
        </div>

        <!-- Management Sections -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-8">
            <!-- Shops Management -->
            <a href="/admin/shops"
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 hover:shadow-md transition-shadow group relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <span class="material-symbols-outlined text-9xl text-blue-500">store</span>
                </div>
                <div class="relative z-10">
                    <div
                        class="w-14 h-14 rounded-xl bg-blue-100 dark:bg-blue-900/30 text-blue-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-outlined text-3xl">store</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#111318] dark:text-white mb-2">Manage Shops</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm">Add new automotive workshops, update
                        details, or remove partners.</p>
                    <span class="inline-flex items-center font-bold text-blue-600 group-hover:text-blue-700">
                        Go to Shops <span
                            class="material-symbols-outlined text-sm ml-1 group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </span>
                </div>
            </a>

            <!-- Products Management -->
            <a href="/admin/products"
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 hover:shadow-md transition-shadow group relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <span class="material-symbols-outlined text-9xl text-green-500">inventory_2</span>
                </div>
                <div class="relative z-10">
                    <div
                        class="w-14 h-14 rounded-xl bg-green-100 dark:bg-green-900/30 text-green-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-outlined text-3xl">inventory_2</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#111318] dark:text-white mb-2">Manage Products</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm">Update inventory, add new parts, adjust
                        pricing, and manage stock levels.</p>
                    <span class="inline-flex items-center font-bold text-green-600 group-hover:text-green-700">
                        Go to Products <span
                            class="material-symbols-outlined text-sm ml-1 group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </span>
                </div>
            </a>

            <!-- Orders Management -->
            <a href="/admin/orders"
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 hover:shadow-md transition-shadow group relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <span class="material-symbols-outlined text-9xl text-purple-500">receipt_long</span>
                </div>
                <div class="relative z-10">
                    <div
                        class="w-14 h-14 rounded-xl bg-purple-100 dark:bg-purple-900/30 text-purple-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-outlined text-3xl">receipt_long</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#111318] dark:text-white mb-2">Manage Orders</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm">View incoming orders, update shipping
                        status, and handle returns/refunds.</p>
                    <span class="inline-flex items-center font-bold text-purple-600 group-hover:text-purple-700">
                        Go to Orders <span
                            class="material-symbols-outlined text-sm ml-1 group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </span>
                </div>
            </a>

            <!-- Users Management -->
            <a href="/admin/users"
                class="bg-white dark:bg-gray-800 rounded-xl shadow-sm border border-[#dbdfe6] dark:border-gray-700 p-6 hover:shadow-md transition-shadow group relative overflow-hidden">
                <div class="absolute top-0 right-0 p-4 opacity-10 group-hover:opacity-20 transition-opacity">
                    <span class="material-symbols-outlined text-9xl text-orange-500">group</span>
                </div>
                <div class="relative z-10">
                    <div
                        class="w-14 h-14 rounded-xl bg-orange-100 dark:bg-orange-900/30 text-orange-600 flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
                        <span class="material-symbols-outlined text-3xl">group</span>
                    </div>
                    <h3 class="text-xl font-bold text-[#111318] dark:text-white mb-2">Manage Users</h3>
                    <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-sm">View customer profiles, manage
                        permissions, and handle support requests.</p>
                    <span class="inline-flex items-center font-bold text-orange-600 group-hover:text-orange-700">
                        Go to Users <span
                            class="material-symbols-outlined text-sm ml-1 group-hover:translate-x-1 transition-transform">arrow_forward</span>
                    </span>
                </div>
            </a>
        </div>
    </main>

    <%- include('partials/footer') %>