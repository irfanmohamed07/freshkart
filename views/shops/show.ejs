<%- include('../partials/header') %>

    <div class="container max-w-[1280px] mx-auto px-4 md:px-10 py-8 min-h-screen">
        <!-- Breadcrumb -->
        <nav class="flex mb-6 text-sm text-gray-500" aria-label="Breadcrumb">
            <ol class="inline-flex items-center space-x-1 md:space-x-3">
                <li class="inline-flex items-center">
                    <a href="/" class="inline-flex items-center hover:text-primary">
                        <span class="material-symbols-outlined text-lg mr-2">home</span>
                        Home
                    </a>
                </li>
                <li>
                    <div class="flex items-center">
                        <span class="material-symbols-outlined text-gray-400 mx-1">chevron_right</span>
                        <a href="/shops" class="hover:text-primary">Shops</a>
                    </div>
                </li>
                <li aria-current="page">
                    <div class="flex items-center">
                        <span class="material-symbols-outlined text-gray-400 mx-1">chevron_right</span>
                        <span class="text-gray-900 font-medium">
                            <%= shop.name %>
                        </span>
                    </div>
                </li>
            </ol>
        </nav>

        <!-- Shop Header -->
        <div
            class="bg-white dark:bg-gray-800 rounded-xl border border-[#dbdfe6] dark:border-gray-700 overflow-hidden mb-8 shadow-sm">
            <!-- Shop banner/header -->
            <div class="relative h-64 bg-gray-900">
                <% if (shop.logo) { %>
                    <div class="absolute inset-0">
                        <img src="<%= shop.logo %>" alt="<%= shop.name %>"
                            class="w-full h-full object-cover opacity-60">
                        <div class="absolute inset-0 bg-gradient-to-t from-[#111318] to-transparent"></div>
                    </div>
                    <% } else { %>
                        <div class="absolute inset-0 bg-gradient-to-r from-gray-900 to-gray-800"></div>
                        <% } %>

                            <div class="absolute bottom-0 left-0 p-6 md:p-8 w-full">
                                <div class="flex items-center flex-wrap gap-2 mb-4">
                                    <span
                                        class="bg-primary text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wide flex items-center">
                                        <span class="material-symbols-outlined text-sm mr-1">verified</span> Verified
                                        Partner
                                    </span>
                                    <span
                                        class="bg-green-500 text-white text-xs font-bold px-3 py-1 rounded-full flex items-center">
                                        <span class="material-symbols-outlined text-sm mr-1">schedule</span> Open Now
                                    </span>
                                </div>
                                <h1 class="text-3xl md:text-5xl font-black text-white mb-2">
                                    <%= shop.name %>
                                </h1>
                                <div class="flex flex-wrap items-center gap-6 text-gray-300 text-sm">
                                    <div class="flex items-center">
                                        <span class="text-yellow-400 material-symbols-outlined text-lg mr-1">star</span>
                                        <span class="font-bold text-white mr-1">4.5</span>
                                        <span>(120+ reviews)</span>
                                    </div>
                                    <div class="flex items-center">
                                        <span class="material-symbols-outlined text-lg mr-1">location_on</span>
                                        <%= shop.address %>
                                    </div>
                                </div>
                            </div>
            </div>

            <!-- Shop details bar -->
            <div
                class="px-6 py-4 border-t border-[#dbdfe6] dark:border-gray-700 flex flex-wrap justify-between items-center gap-4">
                <div class="flex flex-wrap items-center gap-6 md:gap-8">
                    <div class="flex items-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                        <span class="material-symbols-outlined text-primary mr-2">schedule</span>
                        <span>Mon-Sat: 8:00 AM - 7:00 PM</span>
                    </div>
                    <% if (shop.contact) { %>
                        <div class="flex items-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                            <span class="material-symbols-outlined text-primary mr-2">call</span>
                            <span>
                                <%= shop.contact %>
                            </span>
                        </div>
                        <% } %>
                            <div class="flex items-center text-gray-700 dark:text-gray-300 text-sm font-medium">
                                <span class="material-symbols-outlined text-primary mr-2">local_shipping</span>
                                <span>Shipping from ₹50</span>
                            </div>
                </div>
                <div class="flex gap-3">
                    <button
                        class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-primary transition-colors px-4 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-sm font-bold">
                        <span class="material-symbols-outlined text-lg">favorite_border</span>
                        <span>Save</span>
                    </button>
                    <button
                        class="flex items-center gap-2 text-gray-700 dark:text-gray-300 hover:text-primary transition-colors px-4 py-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-700 text-sm font-bold">
                        <span class="material-symbols-outlined text-lg">share</span>
                        <span>Share</span>
                    </button>
                </div>
            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Main content -->
            <div class="lg:w-8/12">
                <!-- Search & Filters -->
                <div
                    class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl p-4 mb-6 shadow-sm">
                    <div class="relative mb-4">
                        <input type="text" placeholder="Search for parts or services..."
                            class="w-full bg-gray-50 dark:bg-gray-900 border border-[#dbdfe6] dark:border-gray-700 rounded-lg pl-10 pr-4 py-3 focus:ring-2 focus:ring-primary focus:border-primary outline-none text-sm transition-all">
                        <span
                            class="absolute left-3 top-1/2 transform -translate-y-1/2 text-gray-400 material-symbols-outlined text-lg">
                            search
                        </span>
                    </div>
                    <div class="flex flex-wrap gap-2">
                        <button class="bg-primary text-white px-4 py-2 text-sm font-bold rounded-lg shadow-sm">All
                            Items</button>
                        <button
                            class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 text-gray-600 dark:text-gray-400 px-4 py-2 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">Services</button>
                        <button
                            class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 text-gray-600 dark:text-gray-400 px-4 py-2 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">Parts</button>
                        <button
                            class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 text-gray-600 dark:text-gray-400 px-4 py-2 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">Fluids</button>
                        <button
                            class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 text-gray-600 dark:text-gray-400 px-4 py-2 text-sm font-medium rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">Accessories</button>
                    </div>
                </div>

                <!-- Products count -->
                <div class="flex items-center justify-between mb-6">
                    <h2 class="text-xl font-bold text-[#111318] dark:text-white">Products & Services (<%=
                            pagination.totalProducts %>)</h2>
                    <div class="relative">
                        <select
                            class="appearance-none border border-[#dbdfe6] dark:border-gray-700 rounded-lg py-2 px-4 pr-10 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-sm font-medium cursor-pointer shadow-sm focus:ring-primary focus:border-primary">
                            <option>Sort: Best Match</option>
                            <option>Price: Low to High</option>
                            <option>Price: High to Low</option>
                        </select>
                        <div
                            class="pointer-events-none absolute inset-y-0 right-0 flex items-center px-2 text-gray-500">
                            <span class="material-symbols-outlined text-sm">expand_more</span>
                        </div>
                    </div>
                </div>

                <!-- Products list -->
                <div class="grid grid-cols-2 md:grid-cols-3 gap-6">
                    <% products.forEach(product=> { %>
                        <div
                            class="bg-white dark:bg-gray-800 rounded-xl overflow-hidden border border-[#dbdfe6] dark:border-gray-700 hover:shadow-xl transition-all duration-300 flex flex-col group">
                            <a href="/products/<%= product.id %>"
                                class="block relative aspect-square bg-gray-50 dark:bg-gray-900 border-b border-[#dbdfe6] dark:border-gray-700 overflow-hidden">
                                <% if (product.image_url) { %>
                                    <img src="<%= product.image_url %>" alt="<%= product.name %>"
                                        class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500">
                                    <% } else { %>
                                        <div class="w-full h-full flex items-center justify-center">
                                            <span class="material-symbols-outlined text-5xl text-gray-300">image</span>
                                        </div>
                                        <% } %>
                                            <div class="absolute top-2 right-2">
                                                <button
                                                    class="bg-white/80 hover:bg-white text-gray-400 hover:text-red-500 p-1.5 rounded-full backdrop-blur-sm transition-colors shadow-sm">
                                                    <span
                                                        class="material-symbols-outlined text-sm block">favorite</span>
                                                </button>
                                            </div>
                            </a>
                            <div class="p-4 flex-1 flex flex-col">
                                <h3
                                    class="font-bold text-[#111318] dark:text-white text-sm md:text-base leading-tight mb-1 line-clamp-2 group-hover:text-primary transition-colors">
                                    <a href="/products/<%= product.id %>">
                                        <%= product.name %>
                                    </a>
                                </h3>
                                <div class="text-xs text-gray-500 mb-3">
                                    <%= shop.name %>
                                </div>

                                <div class="mt-auto">
                                    <div class="flex items-center justify-between mb-3">
                                        <span class="font-black text-lg text-primary">₹<%= typeof
                                                product.price==='number' ? product.price.toFixed(2) :
                                                parseFloat(product.price).toFixed(2) %></span>
                                        <% if (Math.random()> 0.7) { %>
                                            <span
                                                class="text-[10px] font-bold text-green-600 bg-green-50 px-2 py-0.5 rounded-full uppercase tracking-wide">Best
                                                Price</span>
                                            <% } %>
                                    </div>

                                    <% if (locals.user) { %>
                                        <form action="/cart/add" method="POST" class="w-full">
                                            <input type="hidden" name="product_id" value="<%= product.id %>">
                                            <input type="hidden" name="shop_id" value="<%= shop.id %>">
                                            <input type="hidden" name="quantity" value="1">
                                            <button type="submit"
                                                class="w-full bg-[#f0f2f4] dark:bg-gray-700 hover:bg-primary hover:text-white text-[#111318] dark:text-white font-bold py-2.5 rounded-lg text-sm transition-all flex items-center justify-center gap-2">
                                                <span class="material-symbols-outlined text-sm">add_shopping_cart</span>
                                                Add
                                            </button>
                                        </form>
                                        <% } else { %>
                                            <a href="/login"
                                                class="w-full bg-[#f0f2f4] dark:bg-gray-700 hover:bg-primary hover:text-white text-[#111318] dark:text-white font-bold py-2.5 rounded-lg text-sm transition-all flex items-center justify-center gap-2">
                                                <span class="material-symbols-outlined text-sm">login</span>
                                                Log In
                                            </a>
                                            <% } %>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>

                <% if (products.length===0) { %>
                    <div
                        class="bg-gray-50 dark:bg-gray-800/50 p-12 rounded-xl border border-dashed border-gray-300 dark:border-gray-700 text-center mt-6">
                        <span class="material-symbols-outlined text-6xl text-gray-300 mb-4">inventory_2</span>
                        <h2 class="text-xl font-bold mb-2 text-[#111318] dark:text-white">No products found</h2>
                        <p class="text-gray-500 dark:text-gray-400 mb-6 max-w-md mx-auto">This shop hasn't listed any
                            products in this category yet.</p>
                    </div>
                    <% } %>

                        <% if (pagination.totalPages> 1) { %>
                            <div class="mt-12 flex justify-center">
                                <nav class="inline-flex rounded-lg shadow-sm">
                                    <!-- Pagination Logic (Same as index) -->
                                    <% if (pagination.page> 1) { %>
                                        <a href="/shops/<%= shop.id %>?page=<%= pagination.page - 1 %>"
                                            class="px-4 py-2 border border-[#dbdfe6] dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-l-lg flex items-center gap-1 font-medium transition-colors">
                                            <span class="material-symbols-outlined text-base">chevron_left</span> Prev
                                        </a>
                                        <% } else { %>
                                            <span
                                                class="px-4 py-2 border border-[#dbdfe6] dark:border-gray-700 bg-gray-50 dark:bg-gray-900 text-gray-400 cursor-not-allowed rounded-l-lg flex items-center gap-1 font-medium">
                                                <span class="material-symbols-outlined text-base">chevron_left</span>
                                                Prev
                                            </span>
                                            <% } %>
                                                <!-- ... Page numbers similar to previous ... -->
                                                <% for (let i=1; i <=pagination.totalPages; i++) { %>
                                                    <% if (i===pagination.page) { %>
                                                        <span
                                                            class="px-4 py-2 border border-primary bg-primary text-white font-bold">
                                                            <%= i %>
                                                        </span>
                                                        <% } else if (i===1 || i===pagination.totalPages || (i>=
                                                            pagination.page - 1 && i <= pagination.page + 1)) { %>
                                                                <a href="/shops/<%= shop.id %>?page=<%= i %>"
                                                                    class="px-4 py-2 border border-[#dbdfe6] dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors font-medium">
                                                                    <%= i %>
                                                                </a>
                                                                <% } %>
                                                                    <% } %>

                                                                        <% if (pagination.page < pagination.totalPages)
                                                                            { %>
                                                                            <a href="/shops/<%= shop.id %>?page=<%= pagination.page + 1 %>"
                                                                                class="px-4 py-2 border border-[#dbdfe6] dark:border-gray-700 bg-white dark:bg-gray-800 text-gray-700 dark:text-gray-300 hover:bg-gray-50 dark:hover:bg-gray-700 rounded-r-lg flex items-center gap-1 font-medium transition-colors">
                                                                                Next <span
                                                                                    class="material-symbols-outlined text-base">chevron_right</span>
                                                                            </a>
                                                                            <% } else { %>
                                                                                <span
                                                                                    class="px-4 py-2 border border-[#dbdfe6] dark:border-gray-700 bg-gray-50 dark:bg-gray-900 text-gray-400 cursor-not-allowed rounded-r-lg flex items-center gap-1 font-medium">
                                                                                    Next <span
                                                                                        class="material-symbols-outlined text-base">chevron_right</span>
                                                                                </span>
                                                                                <% } %>
                                </nav>
                            </div>
                            <% } %>
            </div>

            <!-- Sidebar -->
            <div class="lg:w-4/12">
                <!-- Shop info card -->
                <div
                    class="bg-white dark:bg-gray-800 border border-[#dbdfe6] dark:border-gray-700 rounded-xl p-6 mb-6 shadow-sm">
                    <h3 class="text-lg font-bold mb-5 text-[#111318] dark:text-white flex items-center">
                        <span class="material-symbols-outlined mr-2 text-primary">info</span> About this Workshop
                    </h3>
                    <div class="space-y-5">
                        <div class="flex">
                            <div
                                class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center text-gray-600 dark:text-gray-300">
                                <span class="material-symbols-outlined text-lg">map</span>
                            </div>
                            <div class="ml-4">
                                <p class="font-bold text-gray-900 dark:text-white text-sm mb-0.5">Address</p>
                                <p class="text-gray-500 dark:text-gray-400 text-sm leading-relaxed">
                                    <%= shop.address %>
                                </p>
                            </div>
                        </div>
                        <% if (shop.contact) { %>
                            <div class="flex">
                                <div
                                    class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center text-gray-600 dark:text-gray-300">
                                    <span class="material-symbols-outlined text-lg">call</span>
                                </div>
                                <div class="ml-4">
                                    <p class="font-bold text-gray-900 dark:text-white text-sm mb-0.5">Contact</p>
                                    <p class="text-gray-500 dark:text-gray-400 text-sm">
                                        <%= shop.contact %>
                                    </p>
                                </div>
                            </div>
                            <% } %>
                                <div class="flex">
                                    <div
                                        class="flex-shrink-0 w-10 h-10 bg-gray-100 dark:bg-gray-700 rounded-full flex items-center justify-center text-gray-600 dark:text-gray-300">
                                        <span class="material-symbols-outlined text-lg">local_shipping</span>
                                    </div>
                                    <div class="ml-4">
                                        <p class="font-bold text-gray-900 dark:text-white text-sm mb-0.5">Delivery &
                                            Returns</p>
                                        <p class="text-gray-500 dark:text-gray-400 text-sm">Free returns within 7 days.
                                            Shipping calculated at checkout.</p>
                                    </div>
                                </div>
                    </div>
                </div>

                <!-- Service Guarantees (Replaces grocery offers) -->
                <div
                    class="bg-gradient-to-br from-[#101622] to-[#1e2a40] rounded-xl p-6 mb-6 text-white shadow-lg border border-gray-800">
                    <h3 class="text-lg font-bold mb-5 flex items-center">
                        <span class="material-symbols-outlined mr-2 text-yellow-400">verified_user</span> Service
                        Guarantee
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-start bg-white/10 rounded-lg p-3 backdrop-blur-sm border border-white/5">
                            <span class="material-symbols-outlined text-green-400 mr-3 mt-0.5">check_circle</span>
                            <div>
                                <p class="font-bold text-sm mb-0.5 text-white">Genuine Parts</p>
                                <p class="text-xs text-gray-300">100% authentic OEM or certified aftermarket parts.</p>
                            </div>
                        </div>
                        <div class="flex items-start bg-white/10 rounded-lg p-3 backdrop-blur-sm border border-white/5">
                            <span class="material-symbols-outlined text-blue-400 mr-3 mt-0.5">build</span>
                            <div>
                                <p class="font-bold text-sm mb-0.5 text-white">Expert Installation</p>
                                <p class="text-xs text-gray-300">Certified technicians for all service bookings.</p>
                            </div>
                        </div>
                        <div class="flex items-start bg-white/10 rounded-lg p-3 backdrop-blur-sm border border-white/5">
                            <span class="material-symbols-outlined text-purple-400 mr-3 mt-0.5">receipt_long</span>
                            <div>
                                <p class="font-bold text-sm mb-0.5 text-white">Transparent Pricing</p>
                                <p class="text-xs text-gray-300">No hidden fees on service or parts.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>